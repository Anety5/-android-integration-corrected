<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme (night/dark mode) -->
    <style name="Theme.SOMEMethod" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/on_primary</item>

        <!-- Secondary / accent -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@color/on_secondary</item>

        <!-- Surfaces & backgrounds for night -->
        <item name="colorSurface">@color/surface_night</item>
        <item name="android:colorBackground">@color/background_night</item>
        <item name="colorOnSurface">@color/on_surface_night</item>
        <item name="colorOnBackground">@color/on_background_night</item>

        <!-- Errors -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/on_error</item>

        <!-- System bars -->
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:navigationBarColor">@color/surface_night</item>
    </style>

    <!-- Alias for manifest reference -->
    <style name="Theme.SOMEFitnessMethod" parent="Theme.SOMEMethod" />

</resources>


