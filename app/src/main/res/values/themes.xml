<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme (light/default) -->
    <style name="Theme.SOMEMethod" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/on_primary</item>

        <!-- Secondary / accent -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@color/on_secondary</item>

        <!-- Surfaces & backgrounds -->
        <item name="colorSurface">@color/surface</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <item name="colorOnBackground">@color/on_background</item>

        <!-- Errors -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/on_error</item>

        <!-- System bars -->
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:navigationBarColor">@color/surface</item>
    </style>

    <!-- Alias so the manifest name resolves -->
    <style name="Theme.SOMEFitnessMethod" parent="Theme.SOMEMethod" />
</resources>

